<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detailed_book_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/detailed_book_top_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/detailed_book_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/detailed_book_top_left_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detailed_book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:text="The Magicians" />

            <TextView
                android:id="@+id/detailed_book_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:text="Lev Grossman" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:id="@+id/detailed_book_bot_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detailed_book_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45$" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Genres: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detailed_book_genres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Action, Adventure, Romance" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pages:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detailed_book_pages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="400" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ISBN_13/ISBN_10: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detailed_book_isbn_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9781449396930" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / " />

                <TextView
                    android:id="@+id/detailed_book_isbn_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1449396933" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maturity warning: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detailed_book_maturity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not Mature" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More info: "
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/detailed_book_web_link"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Web link" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description: "
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/detailed_book_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/sample_description"
                android:textSize="15sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>